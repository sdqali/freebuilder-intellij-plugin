<idea-plugin>
    <id>in.sdqali.intellij.freebuilder-plugin</id>
    <name>FreeBuilder Plugin</name>
    <version>1.0.0</version>
    <vendor email="sdqali@sdqali.in" url="https://sdqali.in/">Sadique Ali Koothumadan</vendor>

    <description><![CDATA[
      This plugin allows users to apply FreeBuilder annotations and Builder classes<br>
      on Java classes.<br>
    ]]></description>

    <change-notes><![CDATA[
      Release 1.0.0: Initial release.<br>
    ]]>
    </change-notes>

    <idea-version since-build="173.0"/>
    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <group id="FreeBuilderPlugin.DecorateMenu" text="Apply FreeBuilder" description="Menu to apply FreeBuilder">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <action id="FreeBuilderPlugin.Action" class="in.sdqali.intellij.freebuilder.FreeBuilderAction"
                    text="Apply FreeBuilder" description="Applies FreeBuilder"/>
        </group>
    </actions>

</idea-plugin>
